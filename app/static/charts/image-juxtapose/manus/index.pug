extend /partials/layout

block append config

block page

  .wrapper
    .wall
      img(src="./manus-1.jpg")
    .window(style="background-image: url('manus-2.jpg')")
    .slider
      
  
  script.
    
    let wrap = document.querySelector('.wrapper').getBoundingClientRect();
    let img = document.querySelector('.window');
    let slider = document.querySelector('.slider');
    let l = wrap.left;
    let w = wrap.width;
    
    document.querySelector('.slider').addEventListener('mousemove', reveal);
      
    function reveal(e) {
      let x = 100*(e.pageX-l)/w;
      img.style.width = (100-x)+"%"
      slider.style.left = `calc(${x}% - 30px)`
    }

block append css

  style
    :sass
    
      img
        user-select: none
    
      .wrapper
        width: 100%
        height: 600px
        overflow: hidden
        position: relative
        
        > *
          box-sizing: border-box
        
      .slider
        position: absolute
        width: 60px
        height: 60px
        left: calc(50% - 30px)
        top: calc(50% - 30px)
        color: white
        border: 3px solid orange
        z-index: 1
        
        
      .wall
        height: 100%

      .window
        background-position: right center
        background-size: cover
        position: absolute
        top: 0
        right: 0
        border-left: 4px solid white
        overflow: hidden
        width: 50%
        height: 100%
