extend /partials/layout

block append config
  - var datapath = "static/charts/pandemic-response/chart-culture/data"
  - _.extend(page, data.getOne(datapath))
  - toPercent = (n) => (n * 100).toFixed(2) + "%"

block page
  .wrapper.flex
    .txt-center.flex.flex-grow.flex-col
      - chart = page.charts[0]
      .chart-title.txt-lg= page.title
      .chart-subtitle.txt-muted.txt-sm= chart.subtitle

      .chart.flex-grow: .chart-content
        - scale = chart.scale
        - ln = chart.axes[1].values.length
        - fx = (i) => (i + 0.32) / (ln + 0.5)
        - fy = (y) => (y - scale.minY) / (scale.maxY - scale.minY)
        svg(height="100%" width="100%")        
          
          svg(height="100%" x="0" y="50%")
            text(text-anchor="middle" transform="rotate(-90) translate(0 -50)")= chart.axes[3].title
            
          svg(height="100%")
            for n, i in new Array(8)
              - y = 1 - (i / 7)
              svg(y=toPercent(y))
                text(text-anchor="end" transform="translate(-8 4)")
                  = scale.minY + (i/7) * (scale.maxY - scale.minY) + "%"
                  
          svg(height="100%")
            for n, i in new Array(4)
              - y = (i / 8)
              svg(y=toPercent(y))
                line(
                  x1="0%"
                  y1=toPercent(y)
                  x2="100%"
                  y2=toPercent(y)
                  stroke="#0001"
                )
                  = scale.minY + (i/8) * (scale.maxY - scale.minY) + "%"

          g
            for y1, i in chart.axes[1].values
              - y2 = chart.axes[2].values[i]
              - label = chart.axes[0].values[i]
              svg(
                x=toPercent(fx(i))
                y=toPercent(0)
                width="20%"
                height="100%"
              )
                g.bars
                  rect(
                    width="45%"
                    y=toPercent(fy(chart.scale.maxY - y1))
                    height=toPercent(fy(y1))
                    fill="#002a45"
                  )
                  text.chart-value(
                    x="22.5%"
                    y=toPercent(fy(chart.scale.maxY - y1))
                    text-anchor="middle"
                    transform="translate(0 -8)"
                  )
                    = y1

                  rect(
                    width="45%"
                    x="50%"
                    y=toPercent(fy(chart.scale.maxY - y2))
                    height=toPercent(fy(y2))
                    fill="#539ed4"
                  )
                  text.chart-value(
                    x="72.5%"
                    y=toPercent(fy(chart.scale.maxY - y2))
                    text-anchor="middle"
                    transform="translate(0 -8)"
                  )
                    = y2

                svg(x="50%" y="100%")
                  text(
                    text-anchor="end"
                    transform="rotate(-40) translate(-4 12)"
                  )
                    =label

      .row
        ul.legend.list-bare.txt-left.flex.flex-ch
          li.legend-item
            span.legend-item-box(style="background:#002a45")
            span.legend-item-label= chart.axes[1].title
          li.legend-item
            span.legend-item-box(style="background:#539ed4")
            span.legend-item-label= chart.axes[2].title


block append css
  style
    :sass
      .wrapper
        height: 400px

      .chart
        box-sizing: border-box
        position: relative

      .chart-content
        position: absolute
        top: 20px
        left: 70px
        right: 20px
        bottom: 80px

      .chart-content > svg
        border-bottom: 1px solid #ccc

      .chart-title,
      .chart-subtitle
        padding: 0 24px

      .chart-subtitle
        height: 0

      .legend
        font-size: 15px
        margin-bottom: 8px

      .legend-item
        margin: 4px 8px 0
        padding-left: 24px
        position: relative

      .legend-item-box
        position: absolute
        left: 0
        top: 4px
        height: 1em
        width: 1em
        background: black

      .chart-value
        opacity: 0
        transition: opacity 300ms

        .chart:hover &
          opacity: 1

      text
        font-size: 14px
        fill: currentColor

      svg
        overflow: visible

      .chart-source
        font-size: 14px

      @media (max-width: 600px)
        .chart-content
          right: 10px
        .legend
          flex-direction: column
        .legend-item
          width: fit-content
        .chart-value
          transform: translateX('5%')
        rect
          width: 50%
        text
          font-size: 13px
