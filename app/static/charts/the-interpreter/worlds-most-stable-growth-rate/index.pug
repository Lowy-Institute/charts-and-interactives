block scripts
  style
    :sass
      .bg:after
        content: "percentage points"
        position: absolute
        left: 40px
        top: -0.7em
        width: 3em

      @media (max-width: 370px)
        .bar-group-label
          margin-left: 0
          transform-origin: left center
          transform: rotate(30deg)

        .chart-footer
          padding-top: 30px
