extend /partials/layout

include /partials/the-interpreter/bar-chart

block append config
  - page.title = "World's most stable economic growth rate"

block page
  .wrapper(
    ontouchstart=""
    class=written.hyphenCase(page.title)
  )
    +interpreter-bar-chart({
      title: page.title,
      subtitle: "Standard deviation of annual GDP growth rate (2002â€‘18)",
      source: "World Bank/Paul Burke & Martin Siyaranamual",
