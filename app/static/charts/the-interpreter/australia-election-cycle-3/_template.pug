extend /partials/layout

include _line

block append config
  - _.extend(page, data.getOne(__.directory.replace("app/","") + "/data"))

block page
  .wrapper
    .txt-center
      h1= page.title
      if page.subtitle
        h2.txt-muted.p-sm= page.subtitle

    +svg-line(page.chart)

block append scripts
  style
    :sass
      h1
        font-size: 24px
        margin: 0
        line-height: 1.3
      h2
        font-size: 20px

      .wrapper
        max-width: 900px
        overflow: visible
        line-height: 16px

      .chart-wrap
        padding-left: 32px
        padding-bottom: 40px
        margin: 24px 0 12px

      .chart-legend
        margin-left: 6em
        padding-left: 32px
        padding-bottom: 16px
        max-width: 700px

      .chart-details
        text-align: right
        flex-grow: 1
        list-style: none

      .chart-key
        padding: 0.4em
        white-space: nowrap
        display: inline-block

      .chart-legend-long
        .chart-key
          display: block

      .chart-legend,
      .chart-detail
        padding: 4px 0
        padding-left: 32px
        font-size: 15px

      svg.chart-key-line
        display: inline-block
        margin-right: 0.5em

        line
          stroke-width: 3

      svg.line
        overflow: visible
        font-size: 14px
        height: 430px
        line-height: 12px
        pointer-events: none

        svg
          overflow: visible

        path,
        line
          fill: none
          vector-effect: non-scaling-stroke

        line
          stroke-width: 1
          stroke: #ddd

        text
          text-align: center

        path
          stroke-width: 3

        .dot
          stroke-dasharray: 1

      .x,
      .y
        text
          fill: currentColor

      .point
        opacity: 0
        transition: opacity 300ms
        .area
          pointer-events: all
          stroke: none !important
        &:hover
          opacity: 1

      .g0
        circle,
        text
          fill: #39c
        path,
        line
          stroke: #39c

      .g1
        circle,
        text
          fill: #ed4747
        path,
        line
          stroke: #ed4747
      
      .g2
        circle,
        text
          fill: #3c6
        path,
        line
          stroke: #3c6


      @media (max-width: 640px)
        .chart-footer
          display: block

        .chart-legend,
        .chart-key
          display: block

        .chart-details
          text-align: left

        .x-tick:nth-child(even)
          display: none
