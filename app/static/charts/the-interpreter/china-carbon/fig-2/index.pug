extend /partials/layout

block page
  .wrapper.flex.flex-col.txt-center
    .page-title Figure 2: Range of prices in the pilot systems to-date, and estimated prices for the national system by survey respondents
    img(src="chart.svg")
    
    ul.legend.txt-nowrap.flex-wrap.list-bare.txt-left.flex.flex-ch
      for item, i in ["Pilots (actual price range)", "Survey 20th-80th percentile", "Survey average"]
        li.legend-item
          if i == 0
            span.legend-item-box(style="background:#002a45")
          else if i == 1
            span.legend-item-box(style="background:#539ed4")
          else if i == 2
            span.legend-item-box(style="background:url('icon.svg') center center no-repeat; background-size: cover;")            
          span.legend-item-label!= item

      .chart-source.txt-muted.txt-center Source: China Carbon Forum

block append css
  style
    :sass
      .wrapper
        height: auto
        max-width: 700px
        overflow: visible
        position: relative

      .page-title
        margin-bottom: 25px

      .col-wrap 
        margin: 0 -1em

      .col-md
        width: 50%

      .chart
        box-sizing: border-box
        position: relative

      .chart-content
        position: absolute
        top: 20px
        left: 32px
        right: 12px
        bottom: 32px

      .chart-content > svg
        border-bottom: 1px solid #ccc

      .chart-title
        max-width: 320px
        margin: auto

      .legend
        font-size: 15px
        max-width: 90% 
        margin: auto

      .legend-item
        margin: 4px 8px 0
        padding-left: 24px
        position: relative

      .legend-item-box
        position: absolute
        left: 0
        top: 4px
        height: 1em
        width: 1em
        background: black

      text
        font-size: 14px
        &:not([fill])
          fill: currentColor

      svg
        overflow: visible

      sup
        line-height: 0

      polyline
        vector-effect: non-scaling-stroke
        stroke-width: 4

      .chart-notes
        padding: 16px 20px 0
        font-size: 14px
        line-height: 1.2
        position: absolute
        top: 100%
        max-width: 800px

      .chart-source
        font-size: 14px
        max-width: 800px
        margin: 12px 0 0

      .chart-value
        opacity: 0
        transition: opacity 300ms
        font-weight: 500

        &.txt-fff
          fill: #fff

        .chart:hover &
          opacity: 1

      @media screen and (max-width: 600px)
        .chart-notes
          padding-top: 0
        .col-wrap
          display: block
          height: 100%
        .col-md
          width: 100%
          height: 100%
          padding-bottom: 8px
