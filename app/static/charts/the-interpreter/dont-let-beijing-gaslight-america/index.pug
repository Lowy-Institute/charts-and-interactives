  script
    :coffee
      $(document).ready =>
        timeout = null
        className = ""
        $wrapper  = $("#wrapper")

        showBox = (e) =>
          e.stopImmediatePropagation()
          toggleBox(e.currentTarget.dataset.id)

        hideBox = (e) =>
          toggleBox(false)

        toggleBox = (id) =>
          return if id is className

          wait = className
          
          $wrapper
            .removeClass("show-#{className} show-ref showing")
            .toggleClass("showing", id)
          
          window.clearTimeout timeout
          timeout = window.setTimeout => 
            $wrapper.addClass("show-#{(className = id)}")
          , if wait then 200 else 0

        showRef = (e) =>
          $wrapper.addClass("show-ref")

        hideRef = (e) =>
          $wrapper.removeClass("show-ref")

        $(".show").on("click", showBox)
        $(".hide").on("click", hideBox)
       
        $("[href^=\"#ref\"]").on("click", showRef)
        $(".hide-ref").on("click", hideRef)
