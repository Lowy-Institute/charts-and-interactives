    })

block append css
  style
    :sass
      .chart
        width: auto
        margin-right: 8px

      .bar-frame-0 .bar-0 .bar-rect,
      .bar-frame-0 .bar-1 .bar-rect,
      .legend .bar-0
        background: #31363c

      .bar-frame-1 .bar-0 .bar-rect,
      .bar-frame-1 .bar-1 .bar-rect,
      .legend .bar-1
        background: #ff9f19

      .bar-frame-0 .bar-1 .bar-rect,
      .bar-frame-1 .bar-1 .bar-rect,
      .legend .bar-group-1 .bar-1
        background-image: repeating-linear-gradient(45deg, transparent, transparent 2px, rgba(#fff,.5) 2px, rgba(#fff,.5) 4px)

      .legend .bar-group-1 .bar-0,
      .legend .bar-group-1 .bar-1
        background-color: #b5ada8

      .bar-label
        width: auto
        white-space: nowrap
        text-align: center
        padding: 0.7em
        background: white
        box-shadow: 0 3px 12px rgba(#000, 0.2)

        &:before
          content: ""
          position: absolute
          left: 50%
          top: 100%
          border: 6px solid transparent
          border-top-color: white
          margin: 0 -6px

      .bar-frame .bar-0 .bar-label:after
        content: " Commited"
        position: static

      .bar-frame .bar-1 .bar-label:after
        content: " Spent"
        position: static

      .legend .legend
        float: left
        margin: 0 1em 0 0

      .bars:hover .bar-label,
      .bar-group:hover .bar .bar-label
        opacity: 0

      .bar-frame:hover
        z-index: 20
        position: relative

      .bar-group .bar:hover
        .bar-label
          opacity: 1

      @media (max-width: 480px)
        .bar
          width: 16px
        .bars
          padding-left: 40px
        .bar-group-label
          margin-left: 0
          transform-origin: left center
          transform: rotate(30deg)

        .chart-footer
          padding-top: 10px

        .legend .legend
          float: none

        .legend li:first-child
          min-width: 80px

        .bar-label
          white-space: normal

        .bar-group:last-child .bar-label
          left: -32px
          width: 68px

          &:before
            left: 100%
            margin: 0 0 0 -12px

