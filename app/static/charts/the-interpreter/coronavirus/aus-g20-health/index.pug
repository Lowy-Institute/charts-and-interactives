extend /partials/layout

block append config
  - var datapath = "static/charts/the-interpreter/coronavirus/aus-g20-health/data"
  - _.extend(page, data.getOne(datapath))
  - toPercent = (n) => (n * 100).toFixed(2) + "%"

block page 
  .wrapper.flex.flex-col
    .page-title.txt-center= page.title 
    .page-title.txt-center.txt-muted= page.subtitle 
    .col-wrap.txt-center.flex-grow.flex.txt-sm
      for chart, i in page.charts
        .col-md.flex-grow.flex.flex-col
          .chart-title.txt-bold= chart.title 
          .chart.flex-grow: .chart-content 
            - scale = chart.scale
            - fx = (i) => (i + 0.5) / (chart.axes[1].values.length + 0.5)
            - fy = (y) => (y - scale.minY) / (scale.maxY - scale.minY)
            svg(height="100%" width="100%")
              svg(height="100%")
                for n, i in new Array(6)
                  - y = 1 - (i / 5)
                  svg(y=toPercent(y))
                    text(text-anchor="end" transform="translate(-8 4)" class="scale")
                      = scale.minY + (i/5) * (scale.maxY - scale.minY)

              g
                for y, i in chart.axes[1].values
                  - label = chart.axes[0].values[i]
                  svg(
                    x=toPercent(fx(i))
                    y=toPercent(1 - fy(y))
                    width=toPercent(fx(0))
                    height=toPercent(fy(y))
                  )
                    rect(
                      fill=label.highlight ? "#002a45" : "#539ed4"
                      width="100%"
                      height="100%"
                    )

                    text.chart-value(
                      x="50%"
                      y=-8
                      text-anchor="middle"
                    )
                      = y.toFixed(0)

                    svg(x="50%" y="100%")
                      text(
                        text-anchor="middle" 
                        transform="translate(0 20)"
                      ) 
                        =label.text

              svg(y="50%")
                text(
                  text-anchor="middle"
                  y=-40
                  transform="rotate(-90)"
                )
                  = chart.axes[1].title

    //- .chart-source.txt-muted
      != page.source

block append css
  style
    :sass
      .page-title
        margin-bottom: 12px

      .wrapper
        height: 520px

      .col-wrap
        margin: 0 -1em

      .col-md
        padding: 0 0 0 30px
        margin: 0
        width: 33%

      .chart
        position: relative

      .chart-content
        position: absolute
        top: 20px
        left: 36px
        right: 12px
        bottom: 72px

      .chart-content > svg
        border-bottom: 1px solid #ccc
        height: 20px
        min-height: 100%

      .chart-title,
      .chart-subtitle
        padding: 25px 24px 5px

      .chart-title
        max-width: 320px
        margin: auto

      .chart-subtitle
        height: 0

      .chart-source
        font-size: 14px
        max-width: 800px
        margin: 12px 8px 0

      .chart-value
        opacity: 0
        transition: opacity 300ms

        .chart:hover &
          opacity: 1

      text
        font-size: 14px
        fill: currentColor

      svg
        overflow: visible

      @media screen and (max-width: 700px)
        .page-title
          margin-bottom: 2px
        .col-wrap
          flex-direction: column 
        .col-md
          padding: 0
          margin: auto
          width: 80%
          max-width: 500px
          min-width: 280px
          height: 160px
        .chart-flex-grow
          margin: -20px 0
        .chart-title,
        .chart-subtitle
          padding: 0
        .scale
          display: none
        .chart-value
          opacity: 1
        .chart-content
          bottom: 50px
          top: 10px
