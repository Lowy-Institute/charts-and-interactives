block append css
  style
    :sass
      .page-title
        margin-bottom: 12px
      .page-subtitle
        margin-bottom: 12px

      .wrapper
        height: 300px

      .col-wrap
        margin: 0

      .col-md
        padding: 0 0 1em
        width: 20%
      .col-legend
        padding: 0 0 1em
        width: 100%
      .col-legend-mobile
        display:none

      .chart
        position: relative

      .chart-content
        position: absolute
        top: 20px
        left: 36px
        right: 12px
        bottom: 72px

      .chart-content > svg
        border-bottom: 1px solid #ccc
        height: 20px
        min-height: 100%

      .chart-title,
      .chart-subtitle
        padding: 0 0 0 32px

      .chart-title
        max-width: 320px
        margin: auto
        font-size: 13px

      .chart-subtitle
        height: 0

      .chart-source
        font-size: 14px
        max-width: 800px
        margin: 12px 8px 0

      .chart-value
        opacity: 0
        transition: opacity 300ms

        .chart:hover &
          opacity: 0

      text
        font-size: 11px
        fill: currentColor

      svg
        overflow: visible
      
      li
        list-style: none
        margin: 0
        padding: 4px 16px 4px 24px

      .legend
        font-size: 12px
        margin: -32px 0

      .legend-item
        margin: 0 8px
        padding-right: 0
        position: relative
        white-space: nowrap

      .legend-item-box
        position: absolute
        left: 0
        top: .5em
        height: 1em
        width: 1em
        background: black

      @media screen and (max-width: 600px)
        .wrapper
          height: 780px
        .col-wrap
          display: block
        .col-md
          width: 50%
          height: 232px
        .col-legend
          display: none
        .col-legend-mobile
          width: 50%
          height: 232px
