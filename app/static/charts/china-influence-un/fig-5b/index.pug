extend /partials/layout

block append config
  - var datapath = "static/charts/china-influence-un/fig-5b/data"
  - _.extend(page, data.getOne(datapath))
  - toPercent = (n) => (n * 100).toFixed(2) + "%"

block page
  .wrapper.flex.flex-col
    .page-title.txt-center= page.title
    .page-subtitle.txt-center= page.subtitle
    .col-wrap.txt-center.flex-grow.flex
      .col-md.flex-grow.flex.flex-col
        - chart = page.charts[0]
        .chart-title= chart.title
        .chart-subtitle.txt-muted= chart.subtitle

        .chart.flex-grow: .chart-content
          - scale = chart.scale
          - fx = (i) => (i + 0.8) / (chart.axes[1].values.length + 0.5)
          - fy = (y) => (y - scale.minY) / (scale.maxY - scale.minY)
          svg(height="100%" width="100%")
            svg(height="100%")
              for n, i in new Array(8)
                - y = 1 - (i / 7)
                svg(y=toPercent(y))
                  text(text-anchor="end" transform="translate(-8 4)")
                    = scale.minY + (i/7) * (scale.maxY - scale.minY)

            g
              for y, i in chart.axes[1].values
                - label = chart.axes[0].values[i]
                svg(
                  x=toPercent(fx(i))
                  y=toPercent(1 - fy(y))
                  width=toPercent(fx(0))
                  height=toPercent(fy(y))
                )
                  rect(
                    fill="#ff4050"
                    width="100%"
                    height="100%"
                  )

                  text.chart-value(
                    x="50%"
                    y=-8
                    text-anchor="middle"
                  )
                    = y.toFixed(1)

                  svg(x="50%" y="100%")
                    text(
                      text-anchor="end"
                      transform="rotate(-45) translate(-6 12)"
                      class=label.highlight ? "txt-bold" : ""
                    )
                      =label.text

            svg(y="50%")
              text(
                text-anchor="middle"
                y=-24
                transform="rotate(-90)"
              )
                = chart.axes[1].title

