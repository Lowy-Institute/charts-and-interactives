extend /partials/layout

block append config
  - var datapath = "static/charts/api/2022/8-dip-influence-sea/data"
  - var colorpath = "static/charts/templates/colors/data"
  - _.extend(page, data.getOne(datapath))
  - _.extend(page, data.getOne(colorpath))
  - toPercent = (n) => (n * 100).toFixed(2) + "%"
  - chart = page
  - red = "#ff4050"
  - redtxt = "#990f02"
  - green = "#16B56F"
  - greentxt = "#006500"
  
block page
  .wrapper
    h1.txt-center= chart.title
    h2.txt-center.txt-tu.txt-muted= chart.subtitle
    table.mx-auto(cellspacing=0)
      thead
        tr
          th(colspan="3" bgcolor="#444" style="border-right:1px solid #fff;") Diplomatic Influence of Southeast Asian Countries (2023)
        tr(bgcolor="#444")
          th Country
          th Rank
          th Score
      tbody
        for country,i in chart.series[0].values
          tr
            td= country
            for v,j in chart.series[1].values[i]
              - v = +v
              - color = Math.abs(v) < 0.1 ? "" : v > 0 ? greentxt : redtxt
              - bgcolor = v > 0 ? green : red
              - ratio = (255 * (v > 0 ? v / 90 : v / 10)).toFixed(0)
              - intensity = ("0" + (+ratio).toString(16)).slice(-2)
              //- v = null ? "null" : (v)
              td(
                style=`background-color: ${bgcolor}${intensity}; color: ${color};`
              )
                span= (v).toFixed(2)
                
                

