        Brunei +0.4
      br
      . 
        Laos +0.3
      br
      br
      span.txt-tu.txt-bold Greatest losses
      br
      . 
        China -2.1
      br
      . 
        United States -1.5
      br
      . 
        Russia -1.4

block append css
  style
    :sass
      body
        font-family: Sans
        display: flex
        width: 1px
        min-width: 100%
        *width: 100%

      #wrapper
        line-height: 1.4
        overflow: visible
        font-feature-settings: "pnum" 1
        margin: auto
        width: 600px
        max-width: 100%

      .hint
        font-size: 80%
        max-width: 512px
        margin: auto

      .bars
        position: relative

      .label
        width: 145px
        font-weight: 200
        height: 100%
        margin-left: 12px

      .trend
        width: 20px
        font-weight: 300
        line-height: 1.2
        height: 100%
        text-align: center

      .rank
        width: 17px
        font-weight: 400

      .bar-scale
        display: flex
        margin-left: 165px
        margin-right: 0
        font-size: 14px

      .bar-scale-tick
        width: 25%
        text-align: center
        position: relative
        padding-top: 4px

        &:before
          content: ""
          position: absolute
          left: 50%
          bottom: 100%
          margin-bottom: 1px
          height: 32 * 1.5em
          padding-top: 23px
          border-left: 1px solid rgba(#0F1F2B, 0.2)
          margin-left: -0.5px

        &:first-of-type:before
          border-left: 2px solid rgba(#002b45, 1)

        &:last-of-type,&:last-of-type:before
          border-left: 0
          color: #fff

      .bar-row
        height: 1.4em
        margin-bottom: 4px
        overflow: hidden

        &:hover
          background: #f2f4f6

          .bar-label
            background: #f2f4f6

      .bar
        height: 100%
        margin-left: -108px
        margin-right: 20px
        position: relative
        z-index: 1

      .bar-inner
        position: relative
        height: 80%
        margin: 2px 0

        .neg &
          background: #002b45

        .pos &
          background: #539ed4

        .neutral &
          background: #ccc

      .bar-label
        position: absolute
        padding: 0 0.3em
        background: white
        height: 100%
        font-size: 14px
        left: 100%

      .bar-group-label
        position: absolute
        line-height: 1
        min-width: 220px

      .bar-group-label-neg
        color: #002b45
        margin-left: 102px
        left: 50%
        transform: translateX(-50%) rotate(90deg)
        top: 50%
        margin-top: 132px

      .bar-group-label-pos
        color: #539ed4
        margin-left: 36px
        left: 50%
        transform: translateX(-50%) rotate(-90deg)
        margin-top: 120px

      .key
        position: absolute
        bottom: 120px
        right: 230px
        width: 150px
        background-color: #efeef7
        font-size: 13px
        border: 0px solid #ccc
        padding: 12px

      ul
        list-style: none
      .legend-item
        margin: 0
        padding-right: 16px
        position: relative
      .legend-item-box
        position: absolute
        right: 0
        top: 4px
        height: 0.8em
        width: 0.8em
        background: black


      @media (max-width: 512px)
        .label
          width: 108px

        .trend
          width: 12px

        .bar-scale,
        .bar
          margin-left: 120px

        .bar-group-label-neg
          margin-left: 64px
        .bar-group-label-pos
          margin-left: 36px
