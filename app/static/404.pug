extend /partials/layout

block append config
  - page.title = "Lowy Institute – Charts and Interactives"

block page
  style
    :sass
      body
        font-family: "Sans"
        font-size: 16px

      body
        background: linear-gradient(to right bottom, #0a2234, #092437, #07253a, #05273e, #032941, #022c46, #01304c, #003351, #00395a, #003f64, #00456e, #004b78) !important
        color: #fff
        display: flex
        align-items: center

      a:hover
        color: #539fd5

      p
        margin-bottom: 1rem

      h1
        font: inherit
        text-transform: uppercase
        font-weight: 600
        letter-spacing: 0.02em
        margin-bottom: 0.6rem

        a
          text-decoration: none

      ul
        list-style: none
        padding: 0
        margin: 0 -8px
        overflow: hidden
        display: flex
        flex-wrap: wrap
        font-size: 16px

      li
        margin-bottom: 0
        /* width: 50% */
        float: left
        box-sizing: border-box
        padding: 0.5rem
        text-align: center
        font-family: sans-serif
        display: flex
        flex-grow: 1
        align-items: stretch

        a
          display: block
          padding: 12px 24px
          background: #ffc52c
          color: #000
          text-decoration: none
          line-height: 1.1
          transition: all 300ms
          display: flex
          flex-grow: 1
          align-items: center
          justify-content: center
          width: 100%

          &:hover
            background: #fff
            color: #000

      .text
        margin: 0 auto 1rem
        padding: 1rem 0 0
        border-top: 1px solid rgba(#fff, 0.2)

      .block
        max-width: 828px
        padding: 1rem
        margin: 40px auto

      .socials
        display: flex
        margin: 40px auto

        svg
          height: 24px
          width: 24px

        svg path
          fill: #fff

        .facebook,.twitter,.youtube,.linkedin
          margin-right: 1.5rem

      .txt-x-sm
        font-size: 14px

      @media (max-width: 480px)
        body
          font-size: 16px
          display: inline-block
        .text
          margin: 0 auto 4px
          padding-bottom: 1rem
        ul
          flex-direction: column
        li
          float: none
          width: 100%
          margin: 0 0 1rem
          a
            padding: 1rem 40px

