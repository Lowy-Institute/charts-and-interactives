//-
  This footer appears on the bottom of each issue page, where it's included
  through the `include` keyword.

.container
  footer#footer
    nav.pager
      .pager-page
        span.pager-page-middle
        //span.pager-page-start
        //span.pager-page-end

      //ul.pager-list
        for i in [1]
          li.pager-item(class=(i == 0 ? "active" : ""))
            a.pager-link(href=`#scroll-item-${i || "intro"}` tabindex="0")
              = ""
