ul.link-grid.list-bare.txt-ff.bg-dk
  //if issue
    li.col-fw.txt-center.txt-sm.txt-tu.pv-sm(style="grid-column-start: 1; grid-column-end: 3;")
      | Explore more topics
  for p,i in page.issues
    li.txt-tu(class=(p.href === issue && issue.href ? "active" : ""))
      a.txt-bare.flex-col(
        href=`/features/fortress-australia/${p.href}`
        class=(p.href === (issue && issue.href) ? "active" : "")
      )
        span.tag.txt-micro.fw700(class=`tag-${i}`)!= p.theme
        span.txt-mini.pv-xs.lead-tight!= p.title
        span.txt-micro.opacity-50!= p.author
