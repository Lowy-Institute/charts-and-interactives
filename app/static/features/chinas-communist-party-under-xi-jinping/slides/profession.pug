      data-view="slide, in-viewport"
      data-duration=1000
    )
      span.line.bg-ff.txt-mono Profession

    .bars.txt-mid.fh.txt-sm
      .bar-group.flex-cv(style={"padding-top": "40px"})
        strong.txt-sans.bar-group-label.txt-center.txt-tu.txt-hl.fade-in.delay-8
          | 1987
        - values = [2.8,0,17.1,0,27.7,0,0,7.6,39.5]
        - labels = ["Military","","Worker","","Party Cadre","","","Retired","Farmer"]
        for value, i in values
          .bar.bar-border.bar-border-mid
            .bar-bg.bg-hl.txt-ff.r0(
              style=`width: ${(value)}%`
              data-view="bars, in-viewport"
              data-duration=1400
              data-delay=(i * 40)
              data-value=value
              data-width=value * 1/0.45
              data-suffix="%"
            )
              .bar-value(class=value < 5 ? "bar-value-outside txt-mid" : "")= value || ""
            .bar-label.txt-left=labels[i]
        - values = [0,2.0,7.4,8.4,8.4,10.6,15.1,19.6,28.5]
        - labels = ["","Student","Worker","Other","Party Cadre","Management Personnel","Technical Personnel","Retired","Farmer"]
