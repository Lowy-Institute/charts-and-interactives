.social-share.fl-r.relative
  a.icon.icon-download(
    title="Download data (.xlsx)"
    href="assets/Lowy Institute COVID Performance Index data - 13 March 2021.xlsx"
    target="_self"
    download
  )
    span Download data (.xlsx)
  a.icon.icon-social-facebook(
    href=[
      "https://www.facebook.com/sharer.php?u=",
      encodeURIComponent(page.url),
    ].join("")
