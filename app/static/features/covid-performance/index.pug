extend /partials/layout

block append config
  - page.title = "Covid Performance"

block page
    
  #controls.p-xs.txt-ff
    #pager-progress
      span#pager-index 1
      span &ensp;/&ensp;
      span#pager-total
    #btn-prev.btn.icon.icon-up
    #btn-next.btn.icon.icon-down
    //- #btn-fs.btn.icon.icon-expand
      
  #scroller.inset-0(
    data-view="scroller"
    data-pager=".pager-page"
    data-index="#pager-index"
  )
    #scroller-inner
      include slides/_slides

  #modal
    .absolute.btn-close HIDE
    #modal-inner
      span.name.txt-bold Title
      | &ensp;
