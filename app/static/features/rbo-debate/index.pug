extend /partials/layout

block append config
  - page.includeFonts = false
  - page.url = "https://interactives.lowyinstitute.org/features/rbo-debate/"
  - page.class = "page-0 page-menu"
  - page.title = "Rules-based Order Debates"
  - page.metaTitle = `${page.title} - Lowy Institute`
  - page.description = ""
  - page.image = "http://interactives.lowyinstitute.org/features/rbo-debate/img/thumbnail.jpg"
  - page.feature = data.getOne("static/features/rbo-debate/data")

block page
  
  .container
    header#header.txt-tu.txt-sm.num-lf
      a.txt-bare.header-logo.home(href="https://www.lowyinstitute.org/")
        | Lowy Institute
      include partials/social


  #scroller
    #scroll-item-intro.scroll-item
      .row
      .row
        .col-1-2.bg-lt.pv-md
          .block
            .txt-sm.txt-tu.ph-sm.pv-sm.txt-hl First Articles
            .block
              ul.list-bare.txt-links
                for article in page.feature.articles
                  li
                    a.txt-bare(href=`articles/${article.href}`)
                      != article.title

        .col-1-2.bg-dk.txt-ff.pv-md
          .block
            .txt-sm.txt-tu.ph-sm.pv-sm.txt-hl Responses
            .block
              ul.list-bare.txt-links
                for response in page.feature.responses
                  li
                    a.txt-bare(href=`responses/${response.href}`)
                      != response.title

block append css
  style
    include:sass _styles.sass
