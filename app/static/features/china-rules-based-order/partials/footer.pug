- var response = page.attributes.map[0] < 8

footer.mx-auto.article-w.txt-center.pv-lg
  
  .md
    a.bg-red.txt-ff.p-sm.br-sm.fw-4(href="/features/china-rules-based-order/")
      span.icon.icon-left-arrow
      | &ensp;Back to debates menu
      
  if response
    .md.pv-md.fw-4.txt-spaced
      span.sm.txt-tu OR
      | <br>Read an article mentioned in this response:
    - var articles = page.feature.articles
    .list.flex.flex-wrap
      each i in page.attributes.map
        - const item = articles[i-1]

        .list-item.ease-out
          h4.xs.txt-tu.txt-mute.txt-left= item.author

          a.thumb.br-sm(
            href=`/features/china-rules-based-order/articles/${item.href}/`
          )
            img(height="150" width="100%" src=`../../img/${item.img}`)

          h2.md.txt-semi.txt-left
            a.txt-bare.ease-out(
              href=`/features/china-rules-based-order/articles/${item.href}/`
            )!= item.title

          p.sm.txt-semi.txt-justify!= "&ldquo;" + item.quote + "&rdquo;"
        
  else
    .md.pv-md.fw-4.txt-spaced
      span.sm.txt-tu OR
      | <br>Read responses to this article:
    - var responses = page.feature.responses
    .list.flex.flex-wrap
      each i in page.attributes.map
        - const item = responses[i-8]
        .list-item.ease-out
          h4.xs.txt-tu.txt-mute.txt-left= item.author

          a.thumb.br-sm(
            href=`/features/china-rules-based-order/responses/${item.href}/`
          )
            img(height="150" width="100%" src=`../../img/${item.img}`)

          h2.md.txt-semi.txt-left
            a.txt-bare.ease-out(
              href=`/features/china-rules-based-order/responses/${item.href}/`
            )!= item.title

          p.sm.txt-semi.txt-justify!= "&ldquo;" + item.quote + "&rdquo;"
