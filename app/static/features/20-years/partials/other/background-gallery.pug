mixin gallery-image(slide, src) 
  .background-image(
    class=`background-image-${slide}`
    style=`background-image: url("./img/${src}")`
  )

mixin gallery-slider(slide, src) 
  .background-slider(
    data-slide=slide
    class=`background-slider-${slide}`
    style=`background-image: url("./img/${src}")`
  )

