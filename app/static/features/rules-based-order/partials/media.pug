- let type = card.media.class
- let noContent = (type == "image no-content")

if type == "video"
  .card.media.video
    iframe(
      src=card.media.src
      frameborder="0"
      allowfullscreen
    )
  .caption.txt-xs!= card.media.caption
else if type == "image" || noContent
  .card.media(class=type)
    img(
      src=card.media.src
    )
  .caption.txt-xs!= card.media.caption
    
else if type == "quote"
  .card.media.quote 
    .top
      img.image(src="img/quotations.svg")
      .bar
    .quotation.txt-l= card.media.quotation
    .name.txt-l= card.media.name
    .supp.txt-sm= card.media.supp
      include social 
    .footer
