.slide.bg-dk
  .slide-inner(data-view="in-viewport")

    .type.txt-lg.txt-mono.txt-center.mx-auto(
      data-view="type, in-viewport"
      data-duration=1000
      class="margin-top: -3rem"
    )
      .line.txt-dk.bg-ff SOE Strategic Functions

    .soe-list-item-grid.flex.flex-jcc.txt-dk.flex-wrap(style="margin: 3rem auto 3rem; width: 47rem")
      for item, i in page.data.SOEStrategicFunctions
        .list-item.flex.flex-jcc.fade-in(class=`delay-${6 + 3 * (~~((1 + i) / 2))}`)
          .list-item-num.flex-cv.bg-dk.txt-dk-mid.txt-md.ph-sm: span= (i+1)
          .list-item-txt.flex-cv.txt-mono.txt-ff.bg-mid.p-xs= item

    .fade-in.delay-16
      img.feature-icon.txt-center(style="margin: 0 auto" data-src="./img/icons/functions.png")
          
    .posa.txt-muted.fade-in.delay-16.txt-xs(style="bottom: 0; right: 0")
