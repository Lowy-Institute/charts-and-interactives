mixin economyArrow
  svg(viewBox="0 0 13 12" width="56" style="margin: 0 1rem;")
    path(fill="currentColor" d="m5.5 6.5-5 5 5-6.5 1 1 3.66-4.73L9.04.4 12 0l.41 2.97-1.13-.85L6.5 7.5l-1-1Z")

.slide.bg-dk
  .posr.fw.fh.flex(data-view="in-viewport")
    
    img.fade-in.posa.fw.fh(data-src="./img/economy/strengths.jpg")

    .slide-inner.flex-grow
      .type.txt-xl.txt-ff.mx-auto(
        data-view="type, in-viewport"
        data-duration=1200
      )
        .txt-xl.line.bg-dk Economic Strengths

      .flex-col
        .mx-auto.txt-ff.txt-md.txt-tu.p-xl.txt-bold
          for strength, i in page.data.economicStrengths
            .flex.fade-up(class="delay-" + (i + 2))
              +economyArrow()
              div(
                style="margin: .5rem 0"
                data-view="type, in-viewport"
                data-duration=1200
                data-delay=(i * 150)
              )
                .line.bg-ff.txt-dk= strength
