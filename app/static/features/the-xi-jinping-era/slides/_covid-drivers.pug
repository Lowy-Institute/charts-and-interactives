mixin economyArrow
  svg(viewBox="0 0 13 12" width="56" style="margin: 0 1rem;")
    path(fill="currentColor" d="m5.5 6.5-5 5 5-6.5 1 1 3.66-4.73L9.04.4 12 0l.41 2.97-1.13-.85L6.5 7.5l-1-1Z")

.slide.bg-dk
  .posr.fw.fh.flex(data-view="in-viewport")
    
    img.fade-in.posa.fw.fh(data-src="./img/background/covid.jpg")

    .slide-inner.flex-grow.txt-mono
      .type.txt-ff.mx-auto.txt-enter(
        data-view="type, in-viewport"
        data-duration=1200
      )
        .txt-xl.line.bg-hl Covid Zero
        .txt-lg.line.bg-ff.txt-dk Drivers and Costs

      .flex-col.txt-mono.pv-lg
        .mx-auto.txt-ff(style="font-size: 38px")
          for item, i in page.data.covidDrivers
            .flex-ch(class="delay-" + (i + 2))
              div(
                style=(i === page.data.covidDrivers.length - 1 ? "margin-top: -1rem" : "margin: .5rem 0")
                data-view="type, in-viewport"
                data-duration=600
                data-delay=(1200 + i * 550)
              )
                .line= item
