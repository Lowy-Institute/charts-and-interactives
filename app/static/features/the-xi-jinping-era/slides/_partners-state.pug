.slide.bg-dk
  .posr.fw.fh.flex(data-view="in-viewport")
    .slide-inner
      .flex-col
        .mx-auto.txt-ff.txt-lg.txt-mono
          for headline, i in ["State-owned companies", ...page.data.stateOwnedCompanies]
            .flex.fade-up(class="delay-" + (i + 2))
              div(
                data-view="type, in-viewport"
                data-duration=1200
                data-delay=(i * 200)
              )
                .line(class=(i ? "bg-ff txt-dk txt-md" : "bg-hl txt-ff txt-lg txt-tu") style=(i ? "margin: .5rem 0;  font-size: 28px" : "margin: 5.5rem 0 1.5rem 0"))!= headline
